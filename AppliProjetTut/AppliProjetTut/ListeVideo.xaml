<s:ScatterViewItem x:Class="SurfaceMindMapping.ListeVideo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid Name="ImagesGrid" Width="300" Height="200" >

        <s:SurfaceScrollViewer Name="listview" 
                               Width="300" 
                               Height="150" 
                               Margin="0,0,0,50"
                               HorizontalScrollBarVisibility="Hidden" 
                               VerticalScrollBarVisibility="Hidden"
                               Background="LightGray">
            <Grid Name="ButtonListGrid" Background="LightGray"/>
        </s:SurfaceScrollViewer>

        <s:SurfaceButton Name="Annuler" Content="Annuler" Width="300" Height="50" Click="Annuler_Click" Margin="0,150,0,0" Background="DarkRed" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30" Foreground="White"/>

    </Grid>
</s:ScatterViewItem>
