<s:TagVisualization x:Class="AppliProjetTut.MenuPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="MenuPrincipal_Loaded"
    Width="100" Height="300" OffsetOrigin="0.5, 0.17">
    <Grid Width="100" Height="100" Background="Orange" Margin="0,0,0,200">

        
        <Grid Name="grdListeSauvegarde" Margin="0,0,0,100" Width="100" Height="50" Background="Brown" />
        
        <Grid Name="btnSave" Margin="0,0,0,100" Width="100" Height="50" Background="Red" />
        <Grid Name="btnSaveAs" Margin="0,0,0,100" Width="100" Height="50" Background="Green" />
        <Grid Name="btnSaveOpen" Margin="0,0,0,100" Width="100" Height="50" Background="Blue" />
        <Grid Name="btnLanguage" Margin="0,0,0,100" Width="100" Height="50" Background="White" />

        <Grid Name="grdText" Margin="-100, 200, -100, -225" Width="0" Height="0" Background="Pink" />

    </Grid>
</s:TagVisualization>
