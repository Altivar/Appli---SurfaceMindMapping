<s:TagVisualization x:Class="AppliProjetTut.MenuPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="MenuPrincipal_Loaded"
    Width="100" Height="300" OffsetOrigin="0.5, 0.17">
    <Grid Width="100" Height="100" Background="Orange" Margin="0,0,0,200">

        
        <Grid Name="grdListeSauvegarde" Margin="0,0,0,100" Width="100" Height="50" Background="Brown" />

        <!--<s:SurfaceButton Name="btnLanguage" Margin="0,0,0,100" Width="100" Height="50" Background="DodgerBlue" />-->
        <s:SurfaceButton Name="btnSave" Margin="0,0,0,100" Width="100" Height="50" Background="BlueViolet" Content="Sauver" Foreground="AliceBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <s:SurfaceButton Name="btnSaveAs" Margin="0,0,0,100" Width="100" Height="50" Background="BlueViolet" Content="Sauver Sous" Foreground="AliceBlue" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <s:SurfaceButton Name="btnOpen" Margin="0,0,0,100" Width="100" Height="50" Background="BlueViolet" Content="Ouvrir" Foreground="AliceBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>



        <Grid Name="grdText" Margin="-100, 200, -100, -225" Width="0" Height="0" Background="Pink" />

    </Grid>
</s:TagVisualization>
